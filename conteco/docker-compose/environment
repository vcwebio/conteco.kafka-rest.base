#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS="kafka_rest.base"
export CONTECO_DC_GLOBAL_STACKNAMES="conteco_dc_kafka_rest"
export CONTECO_DC_GLOBAL_BOOTSTACKS="conteco_dc_kafka_rest"
export CONTECO_DC_GLOBAL_RUNSTACKS=""
export CONTECO_DC_GLOBAL_VOLUME_LIST=""
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_KAFKA_REST_ENVIRONMENT,$CONTECO_DC_KAFKA_REST_COMMAND,$CONTECO_DC_KAFKA_REST_VOLUMES,$CONTECO_DC_KAFKA_REST_NETWORKS,$CONTECO_DC_GLOBAL_VOLUMES,$CONTECO_DC_GLOBAL_NETWORKS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_KAFKA_REST_ENVIRONMENT="\
'KAFKA_REST_HOST_NAME=kafka_rest',\
'KAFKA_REST_BOOTSTRAP_SERVERS=kafka:9092',\
'KAFKA_REST_LISTENERS=http://0.0.0.0:8082',\
'KAFKA_REST_SCHEMA_REGISTRY_URL=http://schema_registry:8081'"
export CONTECO_DC_KAFKA_REST_COMMAND=
export CONTECO_DC_KAFKA_REST_VOLUMES=
export CONTECO_DC_KAFKA_REST_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay"
export CONTECO_DC_GLOBAL_VOLUMES=
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS kafka.base
export CONTECO_DC_KAFKA_REST_PORTS="8082:8082"
export CONTECO_DC_KAFKA_REST_DEPLOY_MODE="replicated"
export CONTECO_DC_KAFKA_REST_DEPLOY_RESOURCES_LIMITS_MEMORY="512m"
export CONTECO_DC_KAFKA_REST_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="256m"
# END SETTINGS kafka.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
